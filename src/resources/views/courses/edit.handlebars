<div>
  <h3>Cap nhat khoa hoc</h3>
  <form method="post" action="/courses/{{course._id}}?_method=put">
    <div class="form-group">
      <label for="name">Ten khoa hoc</label>
      <input
        type="text"
        value={{course.name}}
        class="form-control"
        id="name"
        name="name"
      />
    </div>
    <div class="form-group">
      <label for="description">Mo ta</label>
      <textarea class="form-control" id="description" name="description">
        {{course.description}}
      </textarea>
    </div>
    <div class="form-group">
      <label for="level">Trinh do</label>
      <input
        type="text"
        value={{course.level}}
        class="form-control"
        id="level"
        name="level"
      />
    </div>
    <div class="form-group">
      <label for="videoId">Video ID</label>
      <input
        type="text"
        value={{course.videoId}}
        class="form-control"
        id="videoId"
        name="videoId"
      />
    </div>
    <button type="submit" class="btn btn-primary">Luu lai</button>
  </form>
</div>
